<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="KUFEditor.UI.Dialogs.AboutDialog"
        Title="About KUFEditor"
        Width="400" Height="300"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        Background="#1E1E1E">

    <Border Background="#252526" CornerRadius="8" Margin="1"
            BorderBrush="#3C3C3C" BorderThickness="1">
        <DockPanel>
            <!-- Title Bar -->
            <Border DockPanel.Dock="Top" Background="#333337" Height="32">
                <Grid>
                    <TextBlock Text="About KUFEditor"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="12" FontWeight="Medium"/>
                    <Button Name="CloseButton"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="32" Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            Content="&#xE8BB;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="10"/>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Margin="24" Spacing="16" VerticalAlignment="Center">
                <!-- App Icon/Name -->
                <StackPanel HorizontalAlignment="Center" Spacing="8">
                    <TextBlock Text="KUFEditor"
                               FontSize="24" FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Name="VersionText"
                               Text="Version 1.0.0"
                               FontSize="12" Opacity="0.7"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Description -->
                <TextBlock Text="Kingdom Under Fire Editor for Crusaders and Heroes"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Opacity="0.8"/>

                <!-- Credits -->
                <StackPanel Spacing="4" HorizontalAlignment="Center">
                    <TextBlock Text="Built with Avalonia UI"
                               FontSize="11" Opacity="0.6"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text=".NET 9.0"
                               FontSize="11" Opacity="0.6"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Links -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16">
                    <Button Name="GitHubButton"
                            Content="GitHub"
                            Classes="link-button"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#569CD6"
                            Padding="0"/>
                </StackPanel>

                <!-- Close Button -->
                <Button Name="OkButton"
                        Content="OK"
                        HorizontalAlignment="Center"
                        Width="80"
                        Padding="12,6"/>
            </StackPanel>
        </DockPanel>
    </Border>
</Window>
