<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             x:Class="KUFEditor.UI.Views.TroopInfoEditor">

    <UserControl.Resources>
        <!-- Ryujinx Dark Theme Colors -->
        <Color x:Key="ThemeContentBackgroundColor">#2D2D2D</Color>
        <Color x:Key="ThemeControlBorderColor">#505050</Color>
        <Color x:Key="SecondaryTextColor">#A0FFFFFF</Color>
        <Color x:Key="TertiaryTextColor">#60FFFFFF</Color>
        <Color x:Key="PanelBackground">#252526</Color>
        <Color x:Key="SurfaceBackground">#333337</Color>
        <Color x:Key="ElevatedBackground">#3D3D3D</Color>
        <Color x:Key="AppListHoverBackgroundColor">#1EFFFFFF</Color>
        <Color x:Key="DataGridSelectionColor">#00FABB</Color>

        <SolidColorBrush x:Key="ThemeControlBorderBrush" Color="{StaticResource ThemeControlBorderColor}"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
        <SolidColorBrush x:Key="TertiaryTextBrush" Color="{StaticResource TertiaryTextColor}"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackground}"/>
        <SolidColorBrush x:Key="SurfaceBackgroundBrush" Color="{StaticResource SurfaceBackground}"/>
        <SolidColorBrush x:Key="ElevatedBackgroundBrush" Color="{StaticResource ElevatedBackground}"/>
        <SolidColorBrush x:Key="AppListHoverBackgroundBrush" Color="{StaticResource AppListHoverBackgroundColor}"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Toolbar button -->
        <Style Selector="Button.toolbar-button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource ThemeControlBorderBrush}"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBackgroundBrush}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <Style Selector="Button.toolbar-button:pointerover">
            <Setter Property="Background" Value="{StaticResource ElevatedBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColorLight3}"/>
        </Style>

        <!-- Primary button -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorLight1}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColorLight1}"/>
        </Style>

        <!-- DataGrid -->
        <Style Selector="DataGrid">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="DataGridRow /template/ Rectangle#BackgroundRectangle">
            <Setter Property="RadiusX" Value="4"/>
            <Setter Property="RadiusY" Value="4"/>
        </Style>

        <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="{StaticResource AppListHoverBackgroundBrush}"/>
        </Style>

        <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="{DynamicResource SystemAccentColor}"/>
        </Style>

        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
        </Style>

        <Style Selector="DataGridCell">
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- TabControl -->
        <Style Selector="TabControl">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="TabItem">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CornerRadius" Value="4,4,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="TabItem:pointerover">
            <Setter Property="Background" Value="{StaticResource AppListHoverBackgroundBrush}"/>
        </Style>

        <Style Selector="TabItem:selected">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Section card -->
        <Style Selector="Border.section-card">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Padding" Value="0,0,0,8"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Section title -->
        <Style Selector="TextBlock.section-title">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="LetterSpacing" Value="0.5"/>
        </Style>

        <!-- Field label -->
        <Style Selector="TextBlock.field-label">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TertiaryTextBrush}"/>
            <Setter Property="LetterSpacing" Value="0.3"/>
        </Style>

        <!-- NumericUpDown -->
        <Style Selector="NumericUpDown">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource ThemeControlBorderBrush}"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBackgroundBrush}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style Selector="NumericUpDown:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Slider -->
        <Style Selector="Slider">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Search box -->
        <Style Selector="TextBox.search-box">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource ThemeControlBorderBrush}"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBackgroundBrush}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style Selector="TextBox.search-box:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
        </Style>
    </UserControl.Styles>

    <DockPanel>
        <!-- Toolbar -->
        <Border DockPanel.Dock="Top"
                Background="{StaticResource PanelBackgroundBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{StaticResource ThemeControlBorderBrush}"
                Padding="12,8"
                Height="44">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Actions -->
                <StackPanel Grid.Column="0"
                           Orientation="Horizontal"
                           Spacing="6"
                           VerticalAlignment="Center">
                    <Button Name="SaveButton"
                            Classes="toolbar-button primary"
                            Click="OnSave"
                            Content="ðŸ’¾ Save"/>
                    <Button Name="BackupButton"
                            Classes="toolbar-button"
                            Click="OnBackup"
                            Content="ðŸ“‹ Backup"/>
                    <Button Name="RestoreButton"
                            Classes="toolbar-button"
                            Click="OnRestore"
                            Content="â†© Restore"/>
                </StackPanel>

                <!-- Center Actions -->
                <StackPanel Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="6"
                           Margin="16,0,0,0"
                           VerticalAlignment="Center">
                    <Button Name="ResetSelectedButton"
                            Classes="toolbar-button"
                            Click="OnResetSelected"
                            Content="â†» Reset Selected"/>
                    <Button Name="ResetAllButton"
                            Classes="toolbar-button"
                            Click="OnResetAll"
                            Content="âŸ³ Reset All"/>
                </StackPanel>

                <!-- Right Status -->
                <StackPanel Grid.Column="2"
                           Orientation="Horizontal"
                           Spacing="8"
                           VerticalAlignment="Center">
                    <Ellipse Width="8" Height="8"
                             Fill="#4CAF50"/>
                    <TextBlock Name="StatusText"
                               Text="Ready"
                               FontSize="11"
                               Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Margin="12,12,12,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450" MinWidth="350"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Troop List -->
            <Border Grid.Column="0"
                    Background="{StaticResource PanelBackgroundBrush}"
                    CornerRadius="4"
                    BorderThickness="1"
                    BorderBrush="{StaticResource ThemeControlBorderBrush}"
                    Padding="12">
                <DockPanel>
                    <!-- Search Box -->
                    <Border DockPanel.Dock="Top"
                            Margin="0,0,0,12">
                        <TextBox Name="SearchBox"
                                 Watermark="Search troops..."
                                 Classes="search-box"/>
                    </Border>

                    <!-- Data Grid -->
                    <DataGrid Name="TroopGrid"
                              AutoGenerateColumns="False"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True"
                              GridLinesVisibility="None"
                              SelectionMode="Single"
                              HeadersVisibility="Column"
                              x:CompileBindings="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#"
                                                Binding="{Binding Index}"
                                                Width="50"
                                                IsReadOnly="True"/>
                            <DataGridTextColumn Header="Name"
                                                Binding="{Binding Name}"
                                                Width="*"
                                                IsReadOnly="True"/>
                            <DataGridTextColumn Header="Job"
                                                Binding="{Binding Job}"
                                                Width="70"/>
                            <DataGridTextColumn Header="Type"
                                                Binding="{Binding TypeID}"
                                                Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Background="Transparent"
                          ResizeDirection="Columns"
                          HorizontalAlignment="Stretch"/>

            <!-- Right Panel - Property Editor -->
            <Border Grid.Column="2"
                    Background="{StaticResource PanelBackgroundBrush}"
                    CornerRadius="4"
                    BorderThickness="1"
                    BorderBrush="{StaticResource ThemeControlBorderBrush}"
                    Padding="12">
                <ScrollViewer>
                    <StackPanel>
                        <!-- Header -->
                        <Border Background="Transparent"
                                BorderThickness="0,0,0,1"
                                BorderBrush="{StaticResource ThemeControlBorderBrush}"
                                Padding="0,0,0,12"
                                Margin="0,0,0,12">
                            <TextBlock Name="TroopNameHeader"
                                       Text="Select a troop to edit"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="#FFFFFF"/>
                        </Border>

                        <!-- Tab Control -->
                        <TabControl Name="PropertyTabs" IsVisible="False">
                            <!-- Basic Tab -->
                            <TabItem Header="Basic">
                                <ScrollViewer Padding="8,12">
                                    <StackPanel Spacing="4">
                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="JOB ID" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="JobInput" Minimum="0" Maximum="999"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="TYPE ID" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="TypeIDInput" Minimum="0" Maximum="999"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="BASE WIDTH" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="BaseWidthInput" Minimum="0" Maximum="100" Increment="0.1" FormatString="F1"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="SIGHT RANGE" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="SightRangeInput" Minimum="0" Maximum="1000" Increment="0.5" FormatString="F1"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="DAMAGE DISTRIBUTION" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="DamageDistributionInput" Minimum="0" Maximum="100" Increment="0.1" FormatString="F1"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>

                            <!-- Movement Tab -->
                            <TabItem Header="Movement">
                                <ScrollViewer Padding="8,12">
                                    <StackPanel Spacing="4">
                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="MOVE SPEED" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="MoveSpeedInput" Minimum="0" Maximum="100" Increment="0.5" FormatString="F1"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="ROTATE RATE" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="RotateRateInput" Minimum="0" Maximum="360" Increment="1" FormatString="F1"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="MOVE ACCELERATION" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="MoveAccelerationInput" Minimum="0" Maximum="100" Increment="0.1" FormatString="F2"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="MOVE DECELERATION" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="MoveDecelerationInput" Minimum="0" Maximum="100" Increment="0.1" FormatString="F2"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="MAX SPEED MULTIPLIER" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="MaxUnitSpeedMultiplierInput" Minimum="0" Maximum="10" Increment="0.1" FormatString="F2"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>

                            <!-- Combat Tab -->
                            <TabItem Header="Combat">
                                <ScrollViewer Padding="8,12">
                                    <StackPanel Spacing="4">
                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="DIRECT ATTACK" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="DirectAttackInput" Minimum="0" Maximum="9999" Increment="1" FormatString="F1"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="INDIRECT ATTACK" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="IndirectAttackInput" Minimum="0" Maximum="9999" Increment="1" FormatString="F1"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="DEFENSE" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="DefenseInput" Minimum="0" Maximum="9999" Increment="1" FormatString="F1"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="ATTACK RANGE MAX" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="AttackRangeMaxInput" Minimum="0" Maximum="1000" Increment="0.5" FormatString="F1"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="ATTACK RANGE MIN" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="AttackRangeMinInput" Minimum="0" Maximum="1000" Increment="0.5" FormatString="F1"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="ATTACK FRONT RANGE" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="AttackFrontRangeInput" Minimum="0" Maximum="1000" Increment="0.5" FormatString="F1"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>

                            <!-- Resistances Tab -->
                            <TabItem Header="Resistances">
                                <ScrollViewer Padding="8,12">
                                    <StackPanel Spacing="4">
                                        <Border Classes="section-card">
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Right" Name="ResistMeleeValue" Text="0%" Width="50" TextAlignment="Right" FontWeight="Bold" FontSize="13"/>
                                                <StackPanel>
                                                    <TextBlock Text="MELEE" Classes="field-label" Margin="0,0,0,8"/>
                                                    <Slider Name="ResistMeleeSlider" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Right" Name="ResistRangedValue" Text="0%" Width="50" TextAlignment="Right" FontWeight="Bold" FontSize="13"/>
                                                <StackPanel>
                                                    <TextBlock Text="RANGED" Classes="field-label" Margin="0,0,0,8"/>
                                                    <Slider Name="ResistRangedSlider" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Right" Name="ResistFrontalValue" Text="0%" Width="50" TextAlignment="Right" FontWeight="Bold" FontSize="13"/>
                                                <StackPanel>
                                                    <TextBlock Text="FRONTAL" Classes="field-label" Margin="0,0,0,8"/>
                                                    <Slider Name="ResistFrontalSlider" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Right" Name="ResistExplosionValue" Text="0%" Width="50" TextAlignment="Right" FontWeight="Bold" FontSize="13"/>
                                                <StackPanel>
                                                    <TextBlock Text="EXPLOSION" Classes="field-label" Margin="0,0,0,8"/>
                                                    <Slider Name="ResistExplosionSlider" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Right" Name="ResistFireValue" Text="0%" Width="50" TextAlignment="Right" FontWeight="Bold" FontSize="13"/>
                                                <StackPanel>
                                                    <TextBlock Text="FIRE" Classes="field-label" Margin="0,0,0,8"/>
                                                    <Slider Name="ResistFireSlider" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Right" Name="ResistIceValue" Text="0%" Width="50" TextAlignment="Right" FontWeight="Bold" FontSize="13"/>
                                                <StackPanel>
                                                    <TextBlock Text="ICE" Classes="field-label" Margin="0,0,0,8"/>
                                                    <Slider Name="ResistIceSlider" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Right" Name="ResistLightningValue" Text="0%" Width="50" TextAlignment="Right" FontWeight="Bold" FontSize="13"/>
                                                <StackPanel>
                                                    <TextBlock Text="LIGHTNING" Classes="field-label" Margin="0,0,0,8"/>
                                                    <Slider Name="ResistLightningSlider" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Right" Name="ResistHolyValue" Text="0%" Width="50" TextAlignment="Right" FontWeight="Bold" FontSize="13"/>
                                                <StackPanel>
                                                    <TextBlock Text="HOLY" Classes="field-label" Margin="0,0,0,8"/>
                                                    <Slider Name="ResistHolySlider" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Right" Name="ResistCurseValue" Text="0%" Width="50" TextAlignment="Right" FontWeight="Bold" FontSize="13"/>
                                                <StackPanel>
                                                    <TextBlock Text="CURSE" Classes="field-label" Margin="0,0,0,8"/>
                                                    <Slider Name="ResistCurseSlider" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Right" Name="ResistPoisonValue" Text="0%" Width="50" TextAlignment="Right" FontWeight="Bold" FontSize="13"/>
                                                <StackPanel>
                                                    <TextBlock Text="POISON" Classes="field-label" Margin="0,0,0,8"/>
                                                    <Slider Name="ResistPoisonSlider" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>

                            <!-- Unit Config Tab -->
                            <TabItem Header="Unit Config">
                                <ScrollViewer Padding="8,12">
                                    <StackPanel Spacing="4">
                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="DEFAULT UNIT HP" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="DefaultUnitHPInput" Minimum="0" Maximum="99999" Increment="10" FormatString="F1"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="UNIT HP LEVEL UP" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="UnitHPLevUpInput" Minimum="0" Maximum="1000" Increment="1" FormatString="F1"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="FORMATION RANDOM" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="FormationRandomInput" Minimum="0" Maximum="100"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="DEFAULT UNIT NUM X" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="DefaultUnitNumXInput" Minimum="1" Maximum="20"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="DEFAULT UNIT NUM Y" Classes="field-label" Margin="0,0,0,6"/>
                                                <NumericUpDown Name="DefaultUnitNumYInput" Minimum="1" Maximum="20"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>

                            <!-- Level Up Tab -->
                            <TabItem Header="Level Up">
                                <ScrollViewer Padding="8,12">
                                    <StackPanel Spacing="4">
                                        <!-- Skill Slot 1 -->
                                        <Border Classes="section-card">
                                            <StackPanel>
                                                <TextBlock Text="SKILL SLOT 1" Classes="section-title"/>
                                                <Border Classes="section-card" Margin="0">
                                                    <StackPanel>
                                                        <TextBlock Text="SKILL ID" Classes="field-label" Margin="0,0,0,6"/>
                                                        <NumericUpDown Name="Skill1IDInput" Minimum="0" Maximum="9999"/>
                                                    </StackPanel>
                                                </Border>
                                                <Border Classes="section-card" Margin="0,8,0,0">
                                                    <StackPanel>
                                                        <TextBlock Text="SKILL PER LEVEL" Classes="field-label" Margin="0,0,0,6"/>
                                                        <NumericUpDown Name="Skill1PerLevelInput" Minimum="0" Maximum="100" Increment="0.1" FormatString="F2"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </Border>

                                        <!-- Skill Slot 2 -->
